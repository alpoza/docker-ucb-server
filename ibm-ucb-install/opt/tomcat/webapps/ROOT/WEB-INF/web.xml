<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>IBM UrbanCode Build</display-name>

  <context-param>
     <param-name>org.restlet.application</param-name>
     <param-value>com.urbancode.ubuild.web.restlet.UBuildRestletApplication</param-value>
  </context-param>

  <!-- Display listening ports -->
  <listener>
    <listener-class>com.urbancode.commons.web.UIAddressDisplayListener</listener-class>
  </listener>

  <!-- verify up to date compiled jsps on startup -->
  <listener>
    <listener-class>com.urbancode.commons.web.listener.JspCompileOnStartupListener</listener-class>
  </listener>

  <listener>
    <listener-class>com.urbancode.ubuild.web.security.SessionListener</listener-class>
  </listener>

  <listener>
    <listener-class>org.apache.commons.fileupload.servlet.FileCleanerCleanup</listener-class>
  </listener>

  <!-- =====================================================================
        Filters
       ===================================================================== -->
  <filter>
    <filter-name>SystemUserUnitOfWorkFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.util.SystemUserUnitOfWorkFilter</filter-class>
  </filter>

  <filter>
    <filter-name>CharsetFormSubmissionFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.util.CharsetFormSubmissionFilter</filter-class>
  </filter>

  <filter>
    <filter-name>SecureSessionFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.security.SecureSessionFilter</filter-class>
  </filter>

  <filter>
    <filter-name>DisableSessionUrlFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.security.DisableSessionUrlFilter</filter-class>
  </filter>

  <filter>
    <filter-name>AuthorityFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.util.AuthorityFilter</filter-class>
  </filter>

  <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.util.SecurityFilter</filter-class>
  </filter>

  <filter>
    <filter-name>ApiSecurityFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.security.ApiSecurityFilter</filter-class>
  </filter>

  <filter>
    <filter-name>CachingFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.util.CachingFilter</filter-class>
  </filter>

  <filter>
    <filter-name>AntiCachingFilter</filter-name>
    <filter-class>com.urbancode.commons.web.filter.AntiCachingFilter</filter-class>
  </filter>

  <filter>
    <filter-name>UnitOfWorkFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.restlet.UnitOfWorkFilter</filter-class>
  </filter>

  <filter>
    <filter-name>RestletServerServletRequestWrapperFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.restlet.RestletServerServletRequestWrapperFilter</filter-class>
  </filter>

  <filter>
    <filter-name>CounterFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.util.CounterFilter</filter-class>
  </filter>

  <filter>
    <filter-name>CsrfFilter</filter-name>
    <filter-class>com.urbancode.commons.web.filter.csrf.CsrfFilter</filter-class>

    <init-param>
      <param-name>errorPage</param-name>
      <param-value>
        /WEB-INF/jsps/errors/csrfError.jsp
      </param-value>
    </init-param>

    <init-param>
      <param-name>whitelist</param-name>
      <!--
      Syntax:
      + <regex> : include pattern
      - <regex> : exclude pattern

      Semantics:
      If at least one include pattern matches and no exclude pattern matches,
      the request is accepted without further checks. Otherwise, the referer
      must match in scheme, host, and port with the request url. If the
      referer does not match or is not provided, the request is rejected.
      -->
      <param-value>
        + ^/tasks/.*/view[^/]*$
        + ^/tasks/.*/get[^/]*$
        + ^/tasks/.*/download[^/]*$
        + ^/tasks/admin/agent/AgentTasks/test.*$
        + ^/tasks/codestation2/Codestation/.*$
        + ^/tasks/codestation2/Codestation2/.*$
      </param-value>
    </init-param>
  </filter>

  <filter>
    <filter-name>FrameOptionsFilter</filter-name>
    <filter-class>com.urbancode.commons.web.filter.FrameOptionsFilter</filter-class>
  </filter>

  <filter>
    <filter-name>LocaleFilter</filter-name>
    <filter-class>com.urbancode.ubuild.web.util.filter.LocaleFilter</filter-class>
  </filter>

  <!-- filter-mappings -->
  <filter-mapping>
    <filter-name>SystemUserUnitOfWorkFilter</filter-name>
    <url-pattern>/filetransfer/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CharsetFormSubmissionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>AntiCachingFilter</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>AntiCachingFilter</filter-name>
    <url-pattern>/rest2/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>AntiCachingFilter</filter-name>
    <url-pattern>/tasks/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CachingFilter</filter-name>
    <url-pattern>*.css</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CachingFilter</filter-name>
    <url-pattern>*.js</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CachingFilter</filter-name>
    <url-pattern>*.gif</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CachingFilter</filter-name>
    <url-pattern>*.png</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CachingFilter</filter-name>
    <url-pattern>*.jpg</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CachingFilter</filter-name>
    <url-pattern>*.cssb</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CachingFilter</filter-name>
    <url-pattern>*.jsb</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>SecureSessionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>DisableSessionUrlFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>AuthorityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- SecurityFilter Mappings -->
  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/index.jsp</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/reporting/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/tasks/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/jobs/artifacts/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/filetransfer/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/radiator/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>ApiSecurityFilter</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>ApiSecurityFilter</filter-name>
    <url-pattern>/rest2/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>UnitOfWorkFilter</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>UnitOfWorkFilter</filter-name>
    <url-pattern>/rest2/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <!-- this filter-mapping should match servlet-mapping url-patterns for RestletServlet  -->
    <filter-name>RestletServerServletRequestWrapperFilter</filter-name>
    <url-pattern>/rest/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CounterFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>LocaleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CsrfFilter</filter-name>
    <url-pattern>/tasks/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>FrameOptionsFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- =====================================================================
        Servlets
       ===================================================================== -->
  <servlet>
    <servlet-name>ControllerServlet</servlet-name>
    <servlet-class>com.urbancode.ubuild.web.controller.ControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>InitServlet</servlet-name>
    <servlet-class>com.urbancode.ubuild.web.servlet.InitServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>Trigger</servlet-name>
    <servlet-class>com.urbancode.ubuild.web.trigger.TriggerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ViewArtifact</servlet-name>
    <servlet-class>com.urbancode.ubuild.web.jobs.ViewPublishedArtifactServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>RestletServlet</servlet-name>
    <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>JerseyServlet</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.urbancode.ubuild.web.rest;com.urbancode.jersey.utils.providers.jettison;com.urbancode.vfs.server.rest;com.urbancode.ureport.web.rest.providers;com.urbancode.ureport.server.providers;com.urbancode.security.rest</param-value>
    </init-param>
    <init-param>
      <param-name>com.sun.jersey.config.property.WadlGeneratorConfig</param-name>
      <param-value>com.urbancode.ubuild.web.wadl.BuildWadlGeneratorConfig</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>JavascriptServlet</servlet-name>
    <servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>

    <!-- Location in classpath of the config file -->
    <init-param>
      <param-name>configLocation</param-name>
      <param-value>/jawr.properties</param-value>
    </init-param>
    <init-param>
      <param-name>contextPath</param-name>
      <param-value>/</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>CSSServlet</servlet-name>
    <servlet-class>net.jawr.web.servlet.JawrServlet</servlet-class>

    <!-- Location in classpath of the config file -->
    <init-param>
      <param-name>configLocation</param-name>
      <param-value>/jawr.properties</param-value>
    </init-param>
    <init-param>
      <param-name>contextPath</param-name>
      <param-value>/</param-value>
    </init-param>
    <init-param>
      <param-name>type</param-name>
      <param-value>css</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>PluginDownloadServlet</servlet-name>
    <servlet-class>com.urbancode.ubuild.web.plugin.PluginDownloadServlet</servlet-class>
  </servlet>

  <!-- =====================================================================
        Mappings
       ===================================================================== -->


  <servlet-mapping>
    <servlet-name>JavascriptServlet</servlet-name>
    <url-pattern>*.jsb</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CSSServlet</servlet-name>
    <url-pattern>*.cssb</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <!-- support for jawr.debug.ie.force.css.bundle=true behavior -->
    <servlet-name>CSSServlet</servlet-name>
    <url-pattern>/jawr_generator.css</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ControllerServlet</servlet-name>
    <url-pattern>/tasks/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>Trigger</servlet-name>
    <url-pattern>/trigger</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ViewArtifact</servlet-name>
    <url-pattern>/jobs/artifacts/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RestletServlet</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>JerseyServlet</servlet-name>
    <url-pattern>/rest2/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>PluginDownloadServlet</servlet-name>
    <url-pattern>/plugins/*</url-pattern>
  </servlet-mapping>

  <!-- The Usual Welcome File List -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <jsp-config>
    <taglib>
      <taglib-uri>error</taglib-uri>
      <taglib-location>/WEB-INF/ubuild-tags-error.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>auth</taglib-uri>
      <taglib-location>/WEB-INF/ubuild-tags-authority.tld</taglib-location>
    </taglib>
  </jsp-config>

